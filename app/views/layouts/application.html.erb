<!DOCTYPE html>
<html>
	<head>
		<title>Smart Phone</title>
		<!-- START:stylesheet -->
		<%= stylesheet_link_tag "scaffold" %>
		<%= stylesheet_link_tag "depot", :media => "all" %><!-- <label id="code.slt"/> -->
		<!-- END:stylesheet -->
		<%= javascript_include_tag :defaults %>
		<%= csrf_meta_tag %><!-- <label id="code.csrf"/> -->
	</head>
	<body id="store">
		<div id="banner">
			<%= @page_title || "Smart Phone" %><!-- <label id="code.depot.e.title"/> -->
		</div>
		<div id="columns">
			<div id="side">
				<div id="cart" >
					<% if @cart %>
					<%= hidden_div_if(@cart.line_items.empty?, :id => "cart") do %>
					<%= render @cart %>
					<% end %>
					<% end %>
				</div>
				<a href="/">Home</a>
				<br />
				<a href="http://google.com">Questions</a>
				<br />
				<a href="http://bbc.com">News</a>
				<br />
				<a href="/contact">Contact</a>
				<br />
				<br />
				<% if session[:user_id]==nil%>
				<%= button_to 'Login', login_path%>
				<%end%>
				<% if session[:user_id]%>
				<br />
				<%= link_to 'Users', users_path%> <br />
				<%= link_to 'Orders', orders_path%> <br />
				<%= link_to 'Products', products_path%> <br />
				<br />
				<%= button_to 'Logout', logout_path, :method => :delete%>
				<%end%>
			</div>
			<div id="main">
				<%= yield %><!-- <label id="code.depot.e.include"/> -->
			</div>
		</div>
	</body>
</html>
